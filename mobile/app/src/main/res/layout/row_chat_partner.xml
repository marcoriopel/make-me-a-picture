<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/channel_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Afficher l'historique"
        android:textColor="@color/poly_blue"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/avatar"
        android:layout_width="38dp"
        android:layout_height="41dp"
        app:srcCompat="@drawable/avatar_systeme"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginStart="7dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/mont_light"
            android:paddingStart="2dp"
            android:paddingEnd="10dp"
            android:text="Marie-Ãˆve"
            android:textColor="@color/grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"

            android:fontFamily="@font/mont_light"
            android:maxWidth="190dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="Hi! My Name is Marie!"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
