<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/team2"
        android:layout_width="77dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:text="Équipe 2"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toEndOf="@+id/team1"
        app:layout_constraintTop_toBottomOf="@+id/scoreTeam1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/player4"
        android:layout_width="71dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:text="player"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toEndOf="@+id/player1"
        app:layout_constraintTop_toBottomOf="@+id/team2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/player3"
        android:layout_width="71dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:text="player"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toEndOf="@+id/player2"
        app:layout_constraintTop_toBottomOf="@+id/player4"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="60"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="3dp" />

    <TextView
        android:id="@+id/scoreTeam1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.707"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time" />

    <TextView
        android:id="@+id/team1"
        android:layout_width="77dp"
        android:layout_height="26dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:text="Équipe 1"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoreTeam2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/player2"
        android:layout_width="71dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="4dp"
        android:text="player"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/player1"
        android:layout_width="71dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:text="player"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/team1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/scoreTeam2"
        android:layout_width="20dp"
        android:layout_height="46dp"
        android:layout_marginTop="4dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/scoreTeam1"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time" />

</androidx.constraintlayout.widget.ConstraintLayout>