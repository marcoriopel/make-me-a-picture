<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.mainmenu.GameParameterFragment">

    <!-- TODO: Update blank fragment layout -->

    <!-- Image trouver sur: https://iconscout.com/contributors/avinash-p" target="_blank">Avinash P-->

    <ImageButton
        android:id="@+id/icognito"
        android:layout_width="88dp"
        android:layout_height="81dp"
        android:layout_marginStart="160dp"
        android:layout_marginBottom="88dp"
        android:background="@drawable/button_round"
        android:enabled="true"
        android:gravity="center"
        android:src="@drawable/icon_incognito_64"
        android:textStyle="bold"
        android:theme="@style/Widget.App.Button.Grey"
        app:layout_constraintBottom_toTopOf="@+id/StartGame"
        app:layout_constraintStart_toStartOf="parent"

        />

    <Button
        android:id="@+id/StartGame"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:layout_marginTop="544dp"
        android:background="@drawable/button_rounded"
        android:enabled="true"
        android:gravity="center|center_vertical"
        android:paddingLeft="30dp"
        android:text="@string/StartGame"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:theme="@style/Widget.App.Button.Grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/easy_filter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:layout_marginStart="61dp"
        android:layout_marginTop="242dp"
        android:background="@drawable/button_round"
        android:drawableTop="@drawable/icon_easy"
        android:enabled="true"
        android:paddingTop="7dp"
        android:theme="@style/Widget.App.Button.Green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/hard_filter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:layout_marginTop="242dp"
        android:layout_marginEnd="61dp"
        android:background="@drawable/button_round"
        android:drawableTop="@drawable/icon_hard"
        android:enabled="true"
        android:paddingTop="-5dp"
        android:theme="@style/Widget.App.Button.Red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/medium_filter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:layout_marginTop="242dp"
        android:background="@drawable/button_round"
        android:drawableTop="@drawable/icon_medium"
        android:enabled="true"
        android:paddingTop="9dp"
        android:theme="@style/Widget.App.Button.Orange"
        app:layout_constraintEnd_toStartOf="@+id/hard_filter"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/easy_filter"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/GameCreation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="41dp"
        android:text="CrÃ©ation de partie"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/GameParameter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="90dp"
        android:text="Type De Partie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>