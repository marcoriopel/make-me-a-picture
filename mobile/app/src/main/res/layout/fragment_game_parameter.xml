<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".view.mainmenu.GameParameterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/gameLogo"
            android:layout_width="74dp"
            android:layout_height="67dp"
            tools:src="@drawable/icon_classic"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/GameCreation"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="CrÃ©ation Partie"
            android:textSize="24sp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <EditText
        android:id="@+id/gameName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:ems="10"
        android:hint="Nom de la partie*" />

    <TextView
        android:id="@+id/game_creation_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:text="@string/difficulty"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">
        <Button
            android:id="@+id/easy_filter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:background="@drawable/button_round"
            android:drawableTop="@drawable/icon_easy"
            android:enabled="true"
            android:paddingTop="7dp"
            app:backgroundTint="@color/grey_to_green" />
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/medium_filter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:background="@drawable/button_round"
            android:drawableTop="@drawable/icon_medium"
            android:enabled="true"
            android:paddingTop="9dp"
            app:backgroundTint="@color/grey_to_orange" />
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/hard_filter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:background="@drawable/button_round"
            android:drawableTop="@drawable/icon_hard"
            android:enabled="true"
            android:paddingTop="-5dp"
            app:backgroundTint="@color/grey_to_red" />
    </LinearLayout>


    <TextView
        android:id="@+id/game_creation_private"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:text="@string/private_mode"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <!-- Image trouver sur: https://iconscout.com/contributors/avinash-p" target="_blank">Avinash P-->
    <ImageButton
        android:id="@+id/incognito"
        android:layout_width="88dp"
        android:layout_height="81dp"
        android:background="@drawable/circle"
        android:enabled="true"
        android:gravity="center"
        android:src="@drawable/icon_incognito_64"
        android:textStyle="bold" />

    <Button
        android:id="@+id/StartGame"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_rounded"
        android:enabled="true"
        android:gravity="center|center_vertical"
        android:text="@string/start_game"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:backgroundTint="@color/grey_to_green" />


</LinearLayout>