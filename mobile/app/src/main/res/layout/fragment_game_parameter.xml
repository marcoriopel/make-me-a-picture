<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.mainmenu.GameParameterFragment">

    <!-- TODO: Update blank fragment layout -->

    <!-- Image trouver sur: https://iconscout.com/contributors/avinash-p" target="_blank">Avinash P-->

    <ImageButton
        android:id="@+id/icognito"
        android:layout_width="88dp"
        android:layout_height="81dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="348dp"
        android:background="@drawable/circle"
        android:enabled="true"
        android:gravity="center"

        android:src="@drawable/icon_incognito_64"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/StartGame"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:layout_marginTop="536dp"
        android:background="@drawable/button_rounded"
        android:enabled="true"
        android:gravity="center|center_vertical"
        android:paddingLeft="30dp"
        android:text="@string/StartGame"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/hard_filter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/button_round"
        android:drawableTop="@drawable/icon_hard"
        android:enabled="true"
        android:paddingTop="-5dp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/easy_filter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:layout_marginStart="36dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/button_round"
        android:drawableTop="@drawable/icon_easy"
        android:enabled="true"
        android:paddingTop="7dp"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/medium_filter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:layout_marginTop="240dp"
        android:background="@drawable/button_round"
        android:drawableTop="@drawable/icon_medium"
        android:enabled="true"
        android:paddingTop="9dp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toStartOf="@+id/hard_filter"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toEndOf="@+id/easy_filter"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/gameName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="101dp"
        android:layout_marginTop="156dp"
        android:ems="10"
        android:hint="Nom de la partie"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/password_private_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="101dp"
        android:layout_marginTop="436dp"
        android:ems="10"
        android:hint="Code accès"
        android:inputType="textPersonName"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/gameLogo"
        android:layout_width="74dp"
        android:layout_height="67dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/GameCreation"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/GameCreation"
        android:layout_width="249dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Création Partie"
        android:textSize="24sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>