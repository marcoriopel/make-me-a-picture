        android:id="@+id/secondary3"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/button_round"
        app:backgroundTint="@null" />
    <ImageView
        android:id="@+id/secondary4"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/button_round"
        app:backgroundTint="@null" />
    <ImageView
        android:id="@+id/secondary5"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/button_round"
        app:backgroundTint="@color/poly_blue" />
    <ImageView
        android:id="@+id/secondary6"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/button_round" />
    <ImageView
        android:id="@+id/secondary7"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/button_round" />
    <ImageView
        android:id="@+id/secondary8"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/button_round" />
    <ImageView
        android:id="@+id/secondary9"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/button_round" />

    <ImageView
        android:id="@+id/primaryColor"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/button_round"
        app:backgroundTint="@null" />

</LinearLayout>