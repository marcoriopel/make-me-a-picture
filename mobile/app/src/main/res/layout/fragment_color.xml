        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/button_round"
        app:backgroundTint="@null" />
    <ImageView
        android:id="@+id/secondary2"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginBottom="15dp"
