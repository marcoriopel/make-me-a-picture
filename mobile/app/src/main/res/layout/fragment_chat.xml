<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_grey">

    <LinearLayout
        android:id="@+id/chat_canals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10px">
        <Button
            android:id="@+id/chat1"
            android:layout_width="300px"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:layout_marginStart="30dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="10dp"
            android:enabled="true"
            android:text="Chat 1"
            android:textStyle="bold"
            android:background="@drawable/button_rounded"
            android:theme="@style/Widget.App.Button.Grey"
            android:textAllCaps="false"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"/>

        <Button
            android:id="@+id/chat2"
            android:layout_width="300px"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:layout_marginStart="30dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_rounded"
            android:enabled="true"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:text="Chat 2"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:theme="@style/Widget.App.Button.Grey" />

        <Button
            android:id="@+id/chat3"
            android:layout_width="300px"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:layout_marginStart="30dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="10dp"
            android:enabled="true"
            android:text="Chat 3"
            android:textStyle="bold"
            android:background="@drawable/button_rounded"
            android:theme="@style/Widget.App.Button.Grey"
            android:textAllCaps="false"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="380px"
        android:layout_height="550px"
        android:layout_marginStart="8px"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/chat_background" />

    <LinearLayout
        android:id="@+id/sending_group"
        android:layout_width="380px"
        android:layout_height="50px"
        android:layout_marginStart="8px"
        android:orientation="horizontal"
        android:background="@drawable/edittext_rounded"
        android:layout_gravity="bottom">
        <EditText
            android:id="@+id/editText"
            android:layout_width="310px"
            android:layout_height="wrap_content"
            android:layout_marginStart="8px"
            android:layout_marginEnd="0px"
            android:layout_marginBottom="-9px"
            android:ems="10"
            android:fontFamily="@font/mont_extralight"
            android:hint="Aa"
            android:inputType="text"
            android:paddingStart="10dp"
            android:paddingTop="0dp"
            android:paddingEnd="10dp"
            android:paddingBottom="0dp"
            android:textColor="@color/black"
            android:textSize="17dp"
/>

        <ImageView
            android:id="@+id/send"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/paper_plane" />
    </LinearLayout>




</LinearLayout>

