<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/grey"
    tools:context=".GameActivity">
    <FrameLayout
        android:id="@+id/containerTools"
        android:layout_width="150dp"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button" />
    </FrameLayout>
<LinearLayout
    android:layout_width="800dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/containerCanvas"
        android:layout_width="1200dp"
        android:layout_height="820dp"></FrameLayout>
    <FrameLayout
        android:id="@+id/containerGuess"
        android:layout_width="800dp"
        android:layout_height="wrap_content">
    </FrameLayout>
</LinearLayout>

    <FrameLayout
        android:id="@+id/containerColor"
        android:layout_width="60dp"
        android:layout_height="match_parent"></FrameLayout>

    <FrameLayout
        android:id="@+id/containerChat"
        android:layout_width="265dp"
        android:layout_height="813dp">
    </FrameLayout>
</LinearLayout>